#!/bin/sh

env_path=/work/bin

cd ${env_path}

idx=0
for i in `find ${env_path}/ -name "env_*"`; do
    echo "${idx}\t${i}"
    idx=$((${idx} + 1))
done


K=0
echo -n "?"
read K

if [ -z ${K} ]; then
    echo "${TARGET_NAME}" | toilet -f mono12 -F metal
    return
fi

idx=0
for i in `find ${env_path}/ -name "env_*"`; do
    if [ ${K} = ${idx} ]; then
        break
    fi
    idx=$((${idx} + 1))
done

. "${i}"

#
#env
#
#echo "${TARGET_NAME}.${BRANCH_NAME}" | figlet -ct
#echo "${TARGET_NAME}.${BRANCH_NAME}" | xargs /work/bin/cfont -cyan
clear
echo "=============================================================================="
#echo " ${TARGET_NAME}.${BRANCH_NAME}"
#echo "${TARGET_NAME}" | figlet
echo "${TARGET_NAME}" | toilet -f mono12 -F metal
echo "=============================================================================="
echo "TARGET_NAME          = ${TARGET_NAME}"
echo "BRANCH_NAME          = ${BRANCH_NAME}"
echo "SERVER_NAME          = ${SERVER_NAME}"
echo "KERNEL_DIR           = ${KERNEL_DIR}"
echo "CROSS_COMPILE        = ${CROSS_COMPILE}"
echo "ARCH                 = ${ARCH}"
echo "=============================================================================="
cd ${SRC_DIR}




