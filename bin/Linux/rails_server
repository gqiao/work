#!/bin/sh

PID=`pgrep "ruby"`

if [ ! -z ${PID} ]; then
    ps aux  | grep -m 1 "rails server"
    echo "[ kill rails server process] : PID = ${PID}"
    sudo kill -SIGKILL ${PID}
fi

cd ${SRC_DIR}
rails server&
cd -


google-chrome localhost:3000/$@ || chromium-browser localhost:3000/$@ || firefox localhost:3000/$@

#tail -f ${SRC_DIR}/log/development.log
