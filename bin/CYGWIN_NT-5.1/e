#!/bin/sh

O="--delete"

rsync -avz /work/Dropbox/Emacs/emacs_xp    ~/.emacs
rsync -avz  ${O} /work/Dropbox/Emacs/emacs.d/  ~/.emacs.d/

if [ ! -z ${1} ]; then
    if [ -f ${1} ]; then
        chmod 777 ${1}
    fi
fi
emacs ${1}

rsync -avz  ${O} ~/.emacs.d/ /work/Dropbox/Emacs/emacs.d/
rsync -avz  ~/.emacs   /work/Dropbox/Emacs/emacs_xp
